<fieldset class="flex flex-col">
  <legend class='text-2xl mb-6'>
    <span>{{this.questionNumber}}- </span>
    <span>{{this.question.headline}}</span>
  </legend>

  {{#each this.question.choices key='id' as |choice|}}
    <div class='text-xl my-2'>
      <label for={{choice.value}}>
        <Input
          @type='checkbox'
          id={{choice.value}}
          name={{choice.value}}
          @checked={{choice.selected}}
        />
        {{choice.label}}
      </label>
    </div>
  {{/each}}

  <SubmitButton
    @type='button'
    class='mt-6 w-1/3'
    {{on 'click' (fn @submitAnswer @question @index)}}
  >
    {{@submitText}}
  </SubmitButton>
</fieldset>